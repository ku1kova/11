<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="t1" Minimum="10" Maximum="20" Value="100"  VerticalAlignment="Top" Margin="10,320,320,0" Height="30" ValueChanged="Slider_ValueChanged"/>
        <TextBox x:Name="t2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"  FontSize="{Binding ElementName=slider, Path=Value}" Margin="10,10,217,119"/>
        <Button Content="t3" VerticalAlignment="Top" Margin="10,355,572,0" Click="SaveButton_Click" Height="25"/>
    </Grid>
</Window>
    
